{% extends "Master/MenuTemplate.html.twig" %}

{% block body %}
    <form action="{{ fsc.url() }}" method="post">
        
        <div class="container-fluid">
            
            {#Presenta la parte en la que se pide Ejercicio, Periodo y Retención ... para que el usuario elija#}
            <div class="row">
                <div class="col">
                    <h1 class="h2">
                        <i class="fas fa-book fa-fw"></i>
                        {{ i18n.trans(fsc.title) }} {#Ponemos el título que tiene en Modelo130.php, en este caso Model-130#}
                    </h1>
                    <p>
                        {{ i18n.trans('model-130-p') }} {#Ponemos la parrafada de que es el modelo 130#}
                    </p>
                </div>
            </div>
                    
                    
            <div class="row align-items-end">
                {#Creamos el comboBox Ejercicio y lo cargamos de registros traidos desde Modelo130.php function getExercisesForComboBoxHtml#}
                <div class="col-sm-3">
                    <div class="form-group">
                        {{ i18n.trans('exercise') }}
                        
                        <select name="codejercicio" class="form-control" required="true">
                            {% for exercise in fsc.getExercisesForComboBoxHtml() %} {#getExercises es una function de Modelo130.php, así que cargamos en comboBox todos los ejercicios#}
                                {% if exercise.codejercicio == fsc.codejercicio %}
                                    <option value="{{ exercise.codejercicio }}" selected="">{{ exercise.nombre }}</option>
                                {% else %}
                                    <option value="{{ exercise.codejercicio }}">{{ exercise.nombre }}</option>
                                {% endif %}
                            {% endfor %}
                        </select>
                        
                    </div>
                </div>
                
                {#Creamos el comboBox Periodo y lo cargamos de registros traidos desde Modelo130.php function getPeriodsForComboBoxHtml#}
                <div class="col-sm-3">
                    <div class="form-group">
                        {{ i18n.trans('period') }}
                        <select name="period" class="form-control" required="true">
                            {% for period, label in fsc.getPeriodsForComboBoxHtml() %}
                                {% if period == fsc.period %}
                                    <option value="{{ period }}" selected="">{{ i18n.trans(label) }}</option>
                                {% else %}
                                    <option value="{{ period }}">{{ i18n.trans(label) }}</option>
                                {% endif %}
                            {% endfor %}
                        </select>
                    </div>
                </div>

                {#Creamos el comboBox Retención y lo cargamos de registros traidos desde Modelo130.php function getRetentionsForComboBoxHtml#}
                <div class="col-sm-3">
                    <div class="form-group">
                        {{ i18n.trans('retention') }}
                        <select name="codretencion" class="form-control">
                            <option value="">------</option> {#Obligamos a que la primera vez el comboBox tenga el valor ------#}

                            {#Cargamos el comboBox de retenciones con los registros de tipos de retención traidos desde Modelo130.php getRetentionsForComboBoxHtml()#}
                            {#Mientras cargamos el comboBox de renciones si una de las opciones coincide con la variable codretencion de Modelo130.php ... la decide poner como elegida al comboBox, todo mientras carga cada uno de los registros de tipos de retenciones#}
                            {% for ret in fsc.getRetentionsForComboBoxHtml() %}
                                {% if ret.codretencion == fsc.codretencion %} 
                                    <option value="{{ ret.codretencion }}" selected="">{{ i18n.trans(ret.descripcion) }}</option>
                                {% else %}
                                    <option value="{{ ret.codretencion }}">{{ i18n.trans(ret.descripcion) }}</option>
                                {% endif %}
                            {% endfor %}
                        </select>
                    </div>
                </div>
                        
                {#Creamos el botón de Previsualizar#}
                <div class="col">
                    <div class="form-group">
                        <button type="submit" name="action" value="show" class="btn btn-primary">
                            <i class="fas fa-eye fa-fw"></i> {{ i18n.trans('preview') }}
                        </button>
                    </div>
                </div>
            </div>
            
                        
                        
            {#Presentamos las líneas de facturas de clientes cargadas desde Modelo130.php function loadInvoices()#}            
            {% if fsc.supplierInvoices is not empty %}
                {#La fila donde se presenta el título Resumen#}
                <div class="row">
                    <div class="col">
                        <h2 class="h3 mt-3">
                            <i class="far fa-clipboard fa-fw"></i> {{ i18n.trans('summary') }} {#Resumen#}
                        </h2>
                    </div>
                </div>
                 
                {#La fila donde se presentan las casillas de los totales#}        
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            {{ i18n.trans('number-recipients') }}
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">01</span>
                                </div>
                                <input type="number" value="{{ fsc.numrecipientsFtrasClientes }}" class="form-control text-right" readonly="true" /> {#Nº.perceptores#}
                            </div>
                        </div>
                    </div>
                            
                    <div class="col">
                        <div class="form-group">
                            {{ i18n.trans('tax-base') }}
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">02</span>
                                </div>
                                <input type="number" value="{{ fsc.taxbaseFtrasClientes }}" class="form-control text-right" readonly="true" /> {#Base Imponible#}
                            </div>
                        </div>
                    </div>
                            
                    <div class="col">
                        <div class="form-group">
                            {{ i18n.trans('retentions') }}
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">03</span>
                                </div>
                                <input type="number" value="{{ fsc.retentionsFtrasClientes }}" class="form-control text-right" readonly="true" /> {#Retenciones#}
                            </div>
                        </div>
                    </div>
                            
                    <div class="col">
                        <div class="form-group">
                            {{ i18n.trans('to-deduct') }}
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">04</span>
                                </div>
                                <input type="number" name="todeduct" value="{{ fsc.todeduct }}" class="form-control text-right" required="true" onchange="this.form.submit();" /> {#A deducir#}
                            </div>
                        </div>
                    </div>
                            
                    <div class="col">
                        <div class="form-group">
                            {{ i18n.trans('result') }}
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">05</span>
                                </div>
                                <input type="number" value="{{ fsc.result }}" class="form-control text-right" readonly="true" /> {#Resultado#}
                            </div>
                        </div>
                    </div>
                </div>
                            
                            
                            
                {#jerofa vas por aqui en las facturas de clientes#} 
                
                {#La fila de detalle de cada factura#}            
                <div class="row">
                    <div class="col">
                        <h3 class="h4 mt-3">
                            <i class="far fa-copy fa-fw"></i> {{ i18n.trans('customer-invoices') }}
                        </h3>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>{{ i18n.trans('invoice') }}</th>
                                        <th>{{ i18n.trans('customer') }}</th>
                                        <th class="text-right">{{ i18n.trans('net') }}</th>
                                        <th class="text-right">{{ i18n.trans('taxes') }}</th>
                                        <th class="text-right">{{ i18n.trans('surcharge') }}</th>
                                        <th class="text-right">{{ i18n.trans('retention') }}</th>
                                        <th class="text-right">{{ i18n.trans('total') }}</th>
                                        <th class="text-right">{{ i18n.trans('date') }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in fsc.supplierInvoices %}
                                        <tr>
                                            <td>
                                                <a href="{{ item.url() }}">{{ item.codigo }}</a>
                                            </td>
                                            <td>{{ item.nombrecliente | raw }}</td>
                                            <td class="text-right">{{ fsc.toolBox().coins().format(item.neto) }}</td>
                                            <td class="text-right">{{ fsc.toolBox().coins().format(item.totaliva) }}</td>
                                            <td class="text-right">{{ fsc.toolBox().coins().format(item.totalrecargo) }}</td>
                                            <td class="text-right">{{ fsc.toolBox().coins().format(item.totalirpf) }}</td>
                                            <td class="text-right">{{ fsc.toolBox().coins().format(item.total) }}</td>
                                            <td class="text-right">{{ item.fecha }}</td>
                                        </tr>
                                    {% else %}
                                        <tr class="table-warning">
                                            <td colspan="8">{{ i18n.trans('no-data') }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            {% endif %}
            
            
            
                        
                        
            {#Presentamos las líneas de facturas de proveedores cargadas desde Modelo130.php function loadInvoices()#}            
            {% if fsc.customerInvoices is not empty %}
                <div class="row">
                    <div class="col">
                        <h2 class="h3 mt-3">
                            <i class="far fa-clipboard fa-fw"></i> {{ i18n.trans('summary') }} {#Resumen#}
                        </h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            {{ i18n.trans('number-recipients') }}
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">01</span>
                                </div>
                                <input type="number" value="{{ fsc.numrecipients }}" class="form-control text-right" readonly="true" /> {#Nº.perceptores#}
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            {{ i18n.trans('tax-base') }}
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">02</span>
                                </div>
                                <input type="number" value="{{ fsc.taxbase }}" class="form-control text-right" readonly="true" />
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            {{ i18n.trans('retentions') }}
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">03</span>
                                </div>
                                <input type="number" value="{{ fsc.retentions }}" class="form-control text-right" readonly="true" />
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            {{ i18n.trans('to-deduct') }}
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">04</span>
                                </div>
                                <input type="number" name="todeduct" value="{{ fsc.todeduct }}" class="form-control text-right" required="true" onchange="this.form.submit();" />
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            {{ i18n.trans('result') }}
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">05</span>
                                </div>
                                <input type="number" value="{{ fsc.result }}" class="form-control text-right" readonly="true" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <h3 class="h4 mt-3">
                            <i class="far fa-copy fa-fw"></i> {{ i18n.trans('supplier-invoices') }}
                        </h3>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>{{ i18n.trans('invoice') }}</th>
                                        <th>{{ i18n.trans('supplier') }}</th>
                                        <th class="text-right">{{ i18n.trans('net') }}</th>
                                        <th class="text-right">{{ i18n.trans('taxes') }}</th>
                                        <th class="text-right">{{ i18n.trans('surcharge') }}</th>
                                        <th class="text-right">{{ i18n.trans('retention') }}</th>
                                        <th class="text-right">{{ i18n.trans('total') }}</th>
                                        <th class="text-right">{{ i18n.trans('date') }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in fsc.customerInvoices %}
                                        <tr>
                                            <td>
                                                <a href="{{ item.url() }}">{{ item.codigo }}</a>
                                            </td>
                                            <td>{{ item.nombre | raw }}</td>
                                            <td class="text-right">{{ fsc.toolBox().coins().format(item.neto) }}</td>
                                            <td class="text-right">{{ fsc.toolBox().coins().format(item.totaliva) }}</td>
                                            <td class="text-right">{{ fsc.toolBox().coins().format(item.totalrecargo) }}</td>
                                            <td class="text-right">{{ fsc.toolBox().coins().format(item.totalirpf) }}</td>
                                            <td class="text-right">{{ fsc.toolBox().coins().format(item.total) }}</td>
                                            <td class="text-right">{{ item.fecha }}</td>
                                        </tr>
                                    {% else %}
                                        <tr class="table-warning">
                                            <td colspan="8">{{ i18n.trans('no-data') }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            {% endif %}
            
        </div>
    </form>
{% endblock %}